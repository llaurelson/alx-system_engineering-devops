#!/usr/bin/env bash
# Configures a server with HAProxy

apt update -y && apt upgrade -y
apt install haproxy=1.6.\* -y

echo "ENABLED=1" >>/etc/default/haproxy
haproxy_cfg="\nbackend web-backend\n\tbalance roundrobin\n\tserver 118944-web-02 18.209.179.25 check\n\tserver 118944-web-01 34.207.120.17 check\n\nfrontend http\n\tbind *:80\n\tmode http\n\tdefault_backend web-backend"
echo -e "$haproxy_cfg" >>/etc/haproxy/haproxy.cfg
service haproxy restart
